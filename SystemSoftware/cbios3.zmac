; starting address in RAM is 0x080000
RAMDISKw:
	push hl		; save reg
	push de
	push bc
;	call setupRD	; calculate the absolute memory address
;*********************setup RAM Disk ****************************
; calculate the absolute memory address
;  calculate the MMU page descriptor value
;  calculate offset from the base of the page descriptor value
; each track is 1024 sectors of 128 byte/sec = 0x20000
;   shift (track) left by one + shift (MSB sector) right by one
;   shift (LSB sector) right 1bit with carry bit from MSB sector shift
; return HL with offset within 0xE000

;z calculate absolute address from track/sector values
;z
	ld a,(track)
	ld h,a		; H is 0x08 + (track) [d5..d0] shifted left + (sector) d7
	ld a,(sector)	; get sector value
	sla a		; put most significant bit of sector into carry
	rl h		; roll carry into reg H
	or 0fh		; low nibble is 0xF
	ld l,a
	ld de,0800h	; base address of RAM disk in memory
	add hl,de	; HL now contains 12-bit page descriptor plus attributes
	push hl		;z save for later use
;z use DMA instead of MMU
	call DMAPage
	ld c,DMActrl	; set up DMA master control
	ld hl,0f0e0h	; software ready for dma0&1, no end-of-process, no links
;	outw (c),hl	; write DMA master control reg
	db 0edh,0bfh	; op code for OUTW (C),HL
	ld c,DMA3cnt	; setup count of 512 byte
	ld hl,512
;	outw (c),hl	; write DMA3 count reg
	db 0edh,0bfh	; op code for OUTW (C),HL
	ld c,DMA3dstH	; destination is RAMdisk
	pop hl		; get the calcuated RAM disk physical address
;	outw (c),hl	; write DMA3 destination high reg
	db 0edh,0bfh	; op code for OUTW (C),HL

