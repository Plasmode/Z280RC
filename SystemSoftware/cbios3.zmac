;	or 0f0h		; force high nibble to 0xF
;	ld h,a		; HL now point the address [A11..A0] in RAM disk
	xor a		; clear reg A
	ld l,a		; clear the lower half of HL reg
	ld a,(sector)	; calculate address offset within the 4K page
	and 7		; only interested in lowest 3 bits, the number of 512-byte sector
	sla a		; derive the proper address
	or 0f0h		; force high nibble to 0xF
	ld h,a		; HL now point the address [A11..A0] in RAM disk		
	ld c,DMA3dstL	; A11..A0 of destination address
;	outw (c),hl	; write DMA3 source low reg
	db 0edh,0bfh	; op code for OUTW (C),HL
	ld c,DMA3srcH	; source is what's in dmaad
	ld de,(dmaad)	; get the dmaad in reg de
	ld h,0		; clear h register
	ld a,0fh	; force lowest nibble of DMA3dstH to 0xF
	or d
